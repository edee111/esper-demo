<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- event logger in file -->
  <appender name="FILE_EVENT" class="ch.qos.logback.core.FileAppender">
    <file>event.log</file>

    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  <logger name="cz.muni.fi.runtime.ClientListener" level="INFO">
    <appender-ref ref="FILE_EVENT"/>
  </logger>

  <!-- test logger -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <layout class="ch.qos.logback.classic.PatternLayout">
      <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
    </layout>
  </appender>
  <root level="DEBUG">
    <appender-ref ref="STDOUT"/>
  </root>

  <!-- production logger -->
  <appender name="FILE_PRODUCT" class="ch.qos.logback.core.FileAppender">
    <file>product.log</file>
    <filter class="cz.muni.fi.config.OmitEventsInProductionFilter"/>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  <root level="WARN">
    <appender-ref ref="FILE_PRODUCT" />
  </root>
</configuration>